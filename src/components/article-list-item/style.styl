article-height = 11rem;

articleColours(num) {
  background-color: palette['p'+num];
  text-shadow: palette['p'+num+'-dark'] 0 2px;
  box-shadow: 0 0.5rem palette['p'+num+'-dark'];
  
  .remove {
    text-shadow: palette['p'+num+'-dark'] 0 2px;
  }
}

.article-list-item {
  box-sizing: border-box;
  list-style: none;
  collapse(article-height);
  color: white;
  padding: 0 0 2rem;
  height: article-height;
  overflow: hidden;

  
  .content {
    articleColours(0);
    
    border-radius: 4px;
    display: flex;
    flex-direction: row;
    
    a {
      padding: 3rem 4rem;
      margin: 0;
      display: block;
      flex: 1;
      color: white;
    }
    .remove {
      flex: initial;
      padding: 2rem 3rem;
      display: block;
    }
  }
  
  &.p1 .content {
    articleColours(1);
  }
  &.p2 .content {
    articleColours(2);
  }
  &.p3 .content {
    articleColours(3);
  }
  &.p4 .content {
    articleColours(4);
  }
  &.p5 .content {
    articleColours(5);
  }
  &.p6 .content {
    articleColours(6);
  }
}